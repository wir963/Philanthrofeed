<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" 
    android:background="@drawable/login_page_edit2" >
    
    <ImageView
        android:contentDescription="@string/philogo_desc"
        android:id="@+id/mini_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/philogo" />

    
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/user_edit_text"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp" >

            <TextView
                android:id="@+id/welcome_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/welcome_message1"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/paypal_image"
                android:layout_width="55sp"
                android:layout_height="15sp"
                android:layout_weight="1"
                android:src="@drawable/paypal_logo" />
            
            <TextView
                android:id="@+id/welcome_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/welcome_message2"
                android:layout_marginBottom="8dp" />
    </LinearLayout>
    
	<EditText
        android:id="@+id/user_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_edit_text"
        android:layout_centerHorizontal="true"
        android:ems="11"
        android:hint="@string/username_message"
        android:background="@drawable/round_white_edit_text"
        android:layout_marginBottom="8dp" >
	 <requestFocus />
    </EditText>

	
    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="11"
        android:hint="@string/password_message"
        android:inputType="textPassword"
        android:background="@drawable/round_white_edit_text"
        android:layout_marginBottom="12dp" />

       
        
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_edit_text"
        android:layout_centerHorizontal="true"
        android:text="@string/login_button_message" 
        android:gravity="center"
        android:background="@drawable/round_butt"
        android:minWidth="75dp"
        android:minHeight="28dp" />

   

</RelativeLayout>
