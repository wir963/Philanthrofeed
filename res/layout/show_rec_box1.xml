<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<ImageView
        android:id="@+id/recipientImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

 	<TextView
         android:id="@+id/recipientName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/recipientImage"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="10dp" />

     <TextView
         android:id="@+id/recipientLocation"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/recipientImage"
         android:layout_below="@id/recipientName"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="10dp" />
         
      <TextView
         android:id="@+id/recipientDescription"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/recipientImage"
         android:layout_below="@id/recipientLocation"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="10dp" />
    
</RelativeLayout>
